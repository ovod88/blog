<!DOCTYPE html>

<html>
  <head>
    <title>Login</title>
    <style type="text/css">
      .label {text-align: right}
      .error {color: red}
    </style>
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
    <script>
        $( function () {

            $('.btn').click(function(el) {
     
                let inputs = $('.input'),
                    btn = $('btn');

                inputs.each(function() {

                    if($(this).val().trim().length === 0) {
                        let error = $(this).parent().next('.error');

                        el.preventDefault();

                        error.html('Please enter a value').fadeIn(600);
                        setTimeout(function() {

                            error.fadeOut(600, function() {
                                $(this).text('');
                            });

                        }, 3000);

                    }

                });

            })

        });
    </script>

  </head>

  <body>
    <h2>Login</h2>
    <form method="post">
      <table>
        <tr>
          <td class="label">
            Username
          </td>
          <td>
            <input type="text" name="username" class="input" required value=<%- username %> >
          </td>
          <td class="error">
            <%- login_error%>
          </td>
        </tr>

        <tr>
          <td class="label">
            Password
          </td>
          <td>
            <input type="password" name="password" class="input" value="" required>
          </td>
          <td class="error">
            <%- login_error%>
          </td>
        </tr>

      </table>

      <input value="Send" class="btn" type="submit">
    </form>
  </body>

</html>
